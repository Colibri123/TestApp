<Window x:Class="WpfApp1.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800" WindowStyle="None">
    <Grid >

        <Image HorizontalAlignment="Center" Height="450" VerticalAlignment="Center" Width="800" Source="/start.png" Stretch="Fill"/>
        <ProgressBar x:Name="prog" Margin="0,0,10,17" HorizontalAlignment="Right" Width="768" Height="5" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Label Content="Центр информации фирм" HorizontalAlignment="Center" Margin="0,143,0,0" VerticalAlignment="Top" Foreground="White" FontSize="48"/>

    </Grid>
</Window>
